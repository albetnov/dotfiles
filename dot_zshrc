# fnm
FNM_PATH="/home/albetnv/.local/share/fnm"
if [ -d "$FNM_PATH" ]; then
  export PATH="/home/albetnv/.local/share/fnm:$PATH"
fi

fnm() {
  if [[ "$1" = "env" ]]
  then
    eval "`command fnm env`"
  else
    command fnm "$@"
  fi
}

